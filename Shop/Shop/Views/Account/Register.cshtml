@model Shop.Models.ViewModels.RegisterViewModel

    <div class="container h-100">
        <div id="form" class="row h-100 justify-content-center align-items-center">
            <div class="col-10 col-md-8 col-lg-6">
                <h2>Регистрация нового пользователя</h2>
                <form>
                    <ul class="list-group" style="list-style-type:none">
                        <li list-group-item d-flex justify-content-between align-items-center v-for="item in errors">
                            <span class="badge badge-danger badge-pill">{{item.code}}</span>
                            {{item.error}}
                        </li>
                    </ul>
                    <div class="form-group mb-2">
                        <label asp-for="Email" ></label><br />
                        <input asp-for="Email" class="form-control" v-model="Email" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Password"></label><br />
                        <input asp-for="Password" class="form-control" type="password" v-model="Password" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="PasswordConfirm"></label><br />
                        <input asp-for="PasswordConfirm" class="form-control" type="password" v-model="PasswordConfirm" />
                    </div>
                    <div>
                        <button class="btn btn-outline-primary btn-lg btn-block mt-2" type="button" v-on:click="SendData">
                            <span v-if="visible" class="spinner-border spinner-border-sm" role="status" aria-hidden="true">
                            </span>
                            Регистрация
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
            <script src="~/js/Registrate.js"></script>
