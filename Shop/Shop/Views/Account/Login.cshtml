@model Shop.Models.ViewModels.LoginViewModel

    <div class="container h-100">
        <div id="form" class="row h-100 justify-content-center align-items-center">
            <div class="col-10 col-md-8 col-lg-6">
                <h2 class="col text-center">Авторизуйтесь</h2>
                <h4 v-if="visible_error">
                    <span class="badge badge-danger">
                        {{error_name}}
                    </span>
                    {{description}}
                </h4>
                <form asp-antiforgery="true">
                    <div class="form-group mb-md-2">
                        <label asp-for="Email"></label><br />
                        <input asp-for="Email" class="form-control" placeholder="example@email.com" v-model="Email" />
                    </div>
                    <div class="form-group mb-md-2">
                        <label asp-for="Password"></label><br />
                        <input asp-for="Password" class="form-control" type="password" v-model="Password" />
                    </div>
                    <div class="custom-control custom-checkbox mb-md-2">
                        <input asp-for="RememberMe" class="custom-control-input" v-model="RememberMe" />
                        <label asp-for="RememberMe" class="custom-control-label"></label><br />
                    </div>
                    <div class="col text-center">
                        <button class="btn btn-outline-primary btn-lg btn-block" type="button" v-on:click="Authorize">
                            <span v-if="visible" class="spinner-border spinner-border-sm" role="status" aria-hidden="true">
                            </span>
                            Авторизация
                        </button>
                    </div>

                </form>

            </div>
        </div>
        
    </div>
    <script src="~/js/Login.js"></script>
